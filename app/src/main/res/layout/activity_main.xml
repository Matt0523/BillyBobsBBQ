<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bbq"
            android:id="@+id/bbq_pic"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/billy_bobs_bbq"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="#FFEB3B"
            android:background="#000000"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bbq_text"
            android:text="@string/best_bbq"
            android:layout_above="@id/bbq_address"
            android:layout_margin="20dp"
            android:textSize="28sp"
            android:textColor="#FFEB3B"
            android:background="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2473 Yummy BBQ  St \nChico, CA 95973 \nPhone: (555) 369-5190"
            android:padding="10dp"
            android:id="@+id/bbq_address"
            android:layout_alignParentBottom="true"
            android:textColor="#FAFAFA"
            android:background="#000000"
            />


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>